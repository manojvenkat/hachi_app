<p id="notice"><%= notice %></p>

<div style="padding-top: 20px">
	<% if @user.present? %>
	<div>
		<p>
		  <b>Name:</b>
		  <%= @user.name %>
		</p>
	</div>
	<div>
		<%= link_to(image_tag(@user.image_url + '?type=large', :alt => @user.name + "'s profile pic", :width => 100, :height => 100, :title => @user.name + "'s profile"), "/") %>
	</div>
	<% else %>
	<p>
		<b> Please login to HachiApp using Facebook Account. :) </b>
	</p>
	<% end %>
</div>